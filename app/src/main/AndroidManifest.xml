<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dracolibros">

    <application
        android:allowBackup="true"
        android:icon="@drawable/draclroborous"
        android:label="@string/app_name"
        android:roundIcon="@drawable/draclroborous"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dracolibros">
        <activity
            android:name=".views.FormActivity"
            android:label="@string/title_activity_form"
            android:theme="@style/Theme.Dracolibros.NoActionBar"></activity>
        <activity
            android:name=".views.LogoActivity"
            android:label="@string/title_activity_logo"
            android:theme="@style/Theme.Dracolibros.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.ListBookActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Dracolibros.NoActionBar"></activity>
    </application>

</manifest>