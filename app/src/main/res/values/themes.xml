<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dracolibros" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#B86B37</item>
        <item name="colorPrimaryVariant">#0C5D90</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Dracolibros.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Dracolibros.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Dracolibros.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Dracolibros.Fullscreen" parent="Theme.Dracolibros">
        <item name="android:actionBarStyle">@style/Widget.Theme.Dracolibros.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Dracolibros.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <!-- Nuevos temas aÃ±adidos -->
    <style name="Screens">
        <item name="android:background">#D8BA9F</item>
    </style>

    <style name="AboutAPP">
        <item name="android:textColor">#113455</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AboutAPP.size">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NormalText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/stylo_border</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalText.spinner">
        <item name="android:background">@android:drawable/btn_dropdown</item>
    </style>


</resources>